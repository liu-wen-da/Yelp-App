<Window x:Class="YelpApp_v1.TipsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YelpApp_v1"
        mc:Ignorable="d"
        Title="TipsWindow" Height="800" Width="1200">
    <Grid HorizontalAlignment="Left" Height="784" VerticalAlignment="Top" Margin="10,0,0,0">
        <TextBox x:Name="addTipTextBox" HorizontalAlignment="Right" Margin="0,0,121,674" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="1069" Height="100"/>
        <Button x:Name="addTipButton" Content="Add Tip" HorizontalAlignment="Right" Margin="0,0,10,699" VerticalAlignment="Bottom" Height="50" Width="106" Click="addTipButton_Click"/>
        <GroupBox x:Name="businessTipsGroupBox" Header="Business Tips" Margin="0,0,121,10" Height="659" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="1069">
            <DataGrid x:Name="tipsGrid" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </GroupBox>

    </Grid>
</Window>
